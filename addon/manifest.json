{
    "author": "Sam Macbeth",
    "description": "Makes the dat:// protocol available",
    "manifest_version": 2,
    "name": "Dat P2P Protocol",
    "version": "0.1",
    "applications": {
        "gecko": {
          "id": "dat-fox@sammacbeth.eu",
          "strict_min_version": "58.0"
        }
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "proxy",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "nativeMessaging",
        "<all_urls>"
    ],
    "protocol_handlers": [{
        "protocol": "dat",
        "name": "Dat",
        "uriTemplate": "http://dat.redirect/?%s"
    }],
    "page_action": {
        "browser_style": true,
        "default_title": "Dat",
        "default_icon": "assets/dat-hexagon.svg"
    }
}